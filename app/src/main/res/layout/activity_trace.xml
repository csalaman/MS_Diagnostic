<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_trace"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.cmsc436.ms_diagnostic.Trace">

    <TextView
        android:text="@string/timer_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textSize="@dimen/timer_size"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Chronometer
        android:countDown="false"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timer_object"
        android:textSize="@dimen/timer_size"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="@string/start_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/start_button"
        android:onClick="startTimer"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/timer_object"
        android:layout_toStartOf="@+id/timer_object"
        android:background="@color/colorAccent"/>

    <Button
        android:text="@string/stop_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/stop_button"
        android:onClick="stopTimer"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/timer_object"
        android:layout_toEndOf="@+id/timer_object"
        android:background="@color/colorAccent"/>

    <ImageView

        android:layout_width="300dp"
        android:layout_height="300dp"
        android:foregroundGravity="center"
        android:background = "@drawable/ic_spiral_svg2"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <com.cmsc436.ms_diagnostic.DrawView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/trace_draw_view"/>

</RelativeLayout>
